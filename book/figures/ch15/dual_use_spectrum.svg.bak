<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="800" height="600" fill="#f9f9f9"/>
  
  <!-- Title -->
  <text x="400" y="40" font-family="Arial" font-size="24" font-weight="bold" text-anchor="middle">NeuroAI Dual-Use Spectrum</text>
  <text x="400" y="70" font-family="Arial" font-size="16" text-anchor="middle">Balancing Benefits and Risks of Neuroscience-Inspired AI</text>
  
  <!-- Main Spectrum Bar -->
  <rect x="100" y="200" width="600" height="40" rx="5" ry="5" fill="url(#gradient)"/>
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y1="0%">
      <stop offset="0%"   style="stop-color:#0066cc;stop-opacity:1" />
      <stop offset="50%"  style="stop-color:#9966cc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#cc0000;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Axis Labels -->
  <text x="100" y="260" font-family="Arial" font-size="14" font-weight="bold" text-anchor="middle" fill="#0066cc">Beneficial</text>
  <text x="400" y="260" font-family="Arial" font-size="14" font-weight="bold" text-anchor="middle" fill="#9966cc">Dual-Use</text>
  <text x="700" y="260" font-family="Arial" font-size="14" font-weight="bold" text-anchor="middle" fill="#cc0000">Harmful</text>
  
  <!-- Tick marks -->
  <line x1="100" y1="245" x2="100" y2="250" stroke="#000000" stroke-width="2"/>
  <line x1="250" y1="245" x2="250" y2="250" stroke="#000000" stroke-width="2"/>
  <line x1="400" y1="245" x2="400" y2="250" stroke="#000000" stroke-width="2"/>
  <line x1="550" y1="245" x2="550" y2="250" stroke="#000000" stroke-width="2"/>
  <line x1="700" y1="245" x2="700" y2="250" stroke="#000000" stroke-width="2"/>
  
  <!-- Spectrum Pointers - Beneficial Applications -->
  <polygon points="100,190 110,180 90,180" fill="#0066cc"/>
  <text x="100" y="170" font-family="Arial" font-size="12" text-anchor="middle">Medical</text>
  <text x="100" y="155" font-family="Arial" font-size="12" text-anchor="middle">Diagnostics</text>
  
  <polygon points="175,190 185,180 165,180" fill="#0066cc"/>
  <text x="175" y="170" font-family="Arial" font-size="12" text-anchor="middle">Assistive</text>
  <text x="175" y="155" font-family="Arial" font-size="12" text-anchor="middle">Technology</text>
  
  <polygon points="250,190 260,180 240,180" fill="#0066cc"/>
  <text x="250" y="170" font-family="Arial" font-size="12" text-anchor="middle">Research</text>
  <text x="250" y="155" font-family="Arial" font-size="12" text-anchor="middle">Tools</text>
  
  <!-- Dual-Use Applications -->
  <polygon points="325,190 335,180 315,180" fill="#9966cc"/>
  <text x="325" y="170" font-family="Arial" font-size="12" text-anchor="middle">Emotion</text>
  <text x="325" y="155" font-family="Arial" font-size="12" text-anchor="middle">Recognition</text>
  
  <polygon points="400,190 410,180 390,180" fill="#9966cc"/>
  <text x="400" y="170" font-family="Arial" font-size="12" text-anchor="middle">Brain-Computer</text>
  <text x="400" y="155" font-family="Arial" font-size="12" text-anchor="middle">Interfaces</text>
  
  <polygon points="475,190 485,180 465,180" fill="#9966cc"/>
  <text x="475" y="170" font-family="Arial" font-size="12" text-anchor="middle">Decoding</text>
  <text x="475" y="155" font-family="Arial" font-size="12" text-anchor="middle">Intentions</text>
  
  <!-- Harmful Applications -->
  <polygon points="550,190 560,180 540,180" fill="#cc0000"/>
  <text x="550" y="170" font-family="Arial" font-size="12" text-anchor="middle">Cognitive</text>
  <text x="550" y="155" font-family="Arial" font-size="12" text-anchor="middle">Manipulation</text>
  
  <polygon points="625,190 635,180 615,180" fill="#cc0000"/>
  <text x="625" y="170" font-family="Arial" font-size="12" text-anchor="middle">Privacy</text>
  <text x="625" y="155" font-family="Arial" font-size="12" text-anchor="middle">Invasion</text>
  
  <polygon points="700,190 710,180 690,180" fill="#cc0000"/>
  <text x="700" y="170" font-family="Arial" font-size="12" text-anchor="middle">Weaponized</text>
  <text x="700" y="155" font-family="Arial" font-size="12" text-anchor="middle">Neurotechnology</text>
  
  <!-- Application Examples (Boxes below) -->
  <!-- Beneficial -->
  <rect x="50" y="300" width="200" height="100" rx="10" ry="10" fill="#ccccff" fill-opacity="0.5" stroke="#0066cc" stroke-width="2"/>
  <text x="150" y="320" font-family="Arial" font-size="14" font-weight="bold" text-anchor="middle">Beneficial Applications</text>
  <text x="150" y="345" font-family="Arial" font-size="12" text-anchor="middle">• Early detection of neurological disorders</text>
  <text x="150" y="365" font-family="Arial" font-size="12" text-anchor="middle">• Neural prosthetics for paralyzed patients</text>
  <text x="150" y="385" font-family="Arial" font-size="12" text-anchor="middle">• Adaptive learning systems</text>
  
  <!-- Dual-Use -->
  <rect x="300" y="300" width="200" height="100" rx="10" ry="10" fill="#9966cc" fill-opacity="0.3" stroke="#9966cc" stroke-width="2"/>
  <text x="400" y="320" font-family="Arial" font-size="14" font-weight="bold" text-anchor="middle">Dual-Use Technologies</text>
  <text x="400" y="345" font-family="Arial" font-size="12" text-anchor="middle">• Neural data-based advertising</text>
  <text x="400" y="365" font-family="Arial" font-size="12" text-anchor="middle">• Brain fingerprinting for security</text>
  <text x="400" y="385" font-family="Arial" font-size="12" text-anchor="middle">• Cognitive performance enhancement</text>
  
  <!-- Harmful -->
  <rect x="550" y="300" width="200" height="100" rx="10" ry="10" fill="#ffcccc" fill-opacity="0.5" stroke="#cc0000" stroke-width="2"/>
  <text x="650" y="320" font-family="Arial" font-size="14" font-weight="bold" text-anchor="middle">Harmful Applications</text>
  <text x="650" y="345" font-family="Arial" font-size="12" text-anchor="middle">• Non-consensual thought extraction</text>
  <text x="650" y="365" font-family="Arial" font-size="12" text-anchor="middle">• Neural propaganda targeting</text>
  <text x="650" y="385" font-family="Arial" font-size="12" text-anchor="middle">• Autonomous neural warfare systems</text>
  
  <!-- Mitigation Strategies -->
  <rect x="100" y="440" width="600" height="100" rx="10" ry="10" fill="#f9f9f9" stroke="#9966cc" stroke-width="2"/>
  <text x="400" y="460" font-family="Arial" font-size="14" font-weight="bold" text-anchor="middle">Ethical Governance Strategies</text>
  
  <rect x="130" y="480" width="160" height="40" rx="5" ry="5" fill="#ccccff" fill-opacity="0.5" stroke="#0066cc" stroke-width="1"/>
  <text x="210" y="505" font-family="Arial" font-size="12" text-anchor="middle">Informed Consent</text>
  
  <rect x="320" y="480" width="160" height="40" rx="5" ry="5" fill="#9966cc" fill-opacity="0.3" stroke="#9966cc" stroke-width="1"/>
  <text x="400" y="505" font-family="Arial" font-size="12" text-anchor="middle">Transparency Requirements</text>
  
  <rect x="510" y="480" width="160" height="40" rx="5" ry="5" fill="#ffcccc" fill-opacity="0.5" stroke="#cc0000" stroke-width="1"/>
  <text x="590" y="505" font-family="Arial" font-size="12" text-anchor="middle">International Oversight</text>
  
  <!-- Figure Number and Caption -->
  <text x="400" y="580" font-family="Arial" font-size="12" text-anchor="middle">Figure 15.3: The NeuroAI dual-use spectrum illustrating potential applications and governance strategies</text>
</svg>